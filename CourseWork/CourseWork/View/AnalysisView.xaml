<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:CourseWork.Model"
             xmlns:viewmodel="clr-namespace:CourseWork.ViewModel"
             x:DataType="viewmodel:AnalysisViewModel"
             x:Class="CourseWork.View.AnalysisView"
             Title="AnalysisPage">
    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center">
       
            <VerticalStackLayout
            WidthRequest="250"
            BackgroundColor="Transparent"
            Spacing="10"
            Margin="0,0,0,0">
                <Label Text="Список анализов"/>
                <Entry/>
            
        </VerticalStackLayout>
        <Label Text="Пациент"/>
        <Entry/>
        <Label Text="{Binding patient.PatientID}"/>
        <Entry/>
        <Label Text="{Binding patient.Name}"/>
        <Entry/>
        <Label Text="{Binding patient.Surname}"/>
        <Entry/>
        <Label Text="{Binding patient.DateofBirth,StringFormat='{0:dd/MM/yyy}'}"/>
        <Entry/>
        <Label Text="{Binding patient.Gender}"/>
        <Entry/>
        <Label Text="{Binding patient.Doctor}"/>
        <Entry/>

        <Button Text="Добавить"/>
        <Entry/>
        <Button Text="Изменить"/>
        <Entry/>
        <Button Text="Удалить"/>
        <Entry/>
        <Button Text="Экспорт"/>
        <Entry/>
        <Button Text="Импорт"/>
        <Entry/>
    </VerticalStackLayout>
</ContentPage>