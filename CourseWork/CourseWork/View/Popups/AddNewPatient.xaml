<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CourseWork.View.Popups.AddNewPatient"
             CanBeDismissedByTappingOutsideOfPopup="False"
             Color="Transparent">

    <Frame WidthRequest="400"
           HeightRequest="600"
           Padding="20">

        <VerticalStackLayout   WidthRequest="250"
                               HeightRequest="600"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Spacing="10">
            <Label Text="ID" Margin="0,50,0,0"/>
            <Entry Text="{Binding patient_to_add.PatientID}"/>
            <Label Text="Имя"/>
            <Entry Text="{Binding patient_to_add.PatientName}"/>
            <Label Text="Фамилия"/>
            <Entry Text="{Binding patient_to_add.PatientSurname}"/>
            <Label Text="Дата Рождения"/>
            <DatePicker Format="dd/MM/yyyy" Date="{Binding patient_to_add.DateofBirth}"/>
            <Label Text="Пол"/>
            <Picker Title="Пол" SelectedItem="{Binding patient_to_add.Gender}"/>
                <Picker.Items>
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                </Picker.Items>
            </Picer>
            <Label Text="Семейный терапевт" />
            <Picker Title="Семейный терапевт" SelectedIndex="{Binding patient_to_add.Doctor}"/>
            <Picker.Items>
                <x:String>Горбачева Е.П.</x:String>
                <x:String>Кожурова В.М.</x:String>
                <x:String>Юркевич Н.А.</x:String>
                <Picker/>
            
            </Picker>

            <HorizontalStackLayout HorizontalOptions="CenterAndExpand"
                                   Spacing="10">

                <Button Text="Добавить"
                        Command="{Binding AddAddNewPatientPopupCommand}"
                        IsEnabled="{Binding IsNotBusy}"/>
                <Button Text="Отмена"
                        Command="{Binding AddAddNewPatientPopupCommand}"
                        IsEnabled="{Binding IsNotBusy}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
         </Frame>
           </VerticalStackLayout>
          </ContentPage>
    </toolkit:Popup>